{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/[name]/[address].jsx",
    "pages/account.jsx",
    "src/components/elements/TransferAssets/index.js",
    "pages/api/oneInch/limitOrder.js",
    "pages/api/oneInch/limitOrder.js"
  ],
  "exclude": ["node_modules"]
}
